    "version": "0.2.0",
    "configurations": [
        {
            "name": "node",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/api/server.js",
            "localRoot": "${workspaceFolder}/api",
            "remoteRoot": "${workspaceFolder}/api",
            "cwd": "${workspaceFolder}/api",
            "args": [
                "localhost",
                "root"
            ]
        },
        {
            "name": "Test Datafns",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/server/datafns/datafns_test.go",
            "env": {},
            "args": []
        },
        {
            "name": "Go Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/server/main.go"
        },
        {
            "name": "Launch firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "http://localhost:3000/home/callum/projects/itd_reports_website/client/src",
                    "path": "${workspaceFolder}/client/src"
                },
            ]
        }
    ],
    "inputs": [
        {
            "id": "PID",
            "type": "promptString",
            "description": "PID"
        }
    ]
}